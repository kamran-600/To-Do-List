<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/edit"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_above="@id/splash"
        app:lottie_fileName="swipe_right.json"
        android:layout_centerHorizontal="true"
        app:lottie_speed="0.9"
        app:lottie_repeatCount="2"
        app:lottie_autoPlay="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/splash"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        app:lottie_fileName="splashScreen.json"
        app:lottie_speed="0.2"
        app:lottie_autoPlay="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/delete"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@id/splash"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        app:lottie_fileName="swipe_left.json"
        app:lottie_speed="0.9"
        app:lottie_repeatCount="2"
        app:lottie_autoPlay="true" />



</RelativeLayout>